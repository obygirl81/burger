<h1 class="text-center mt-3">Eat-Da-Burger</h1>

<img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS70GZod_uXRUIS5cqBD-9sqf69xFGGMs7CMVdWfCETyAaoyTpXKA" alt="burger" class="burger-img img-fluid mx-auto d-block mt-3">

<h2 class="text-center mt-3">Select a burger to devour!</h2>

<div class="burger-list-headers mt-3 d-flex justify-content-around">
    <h3>Ready to devour!</h3>
    <h3>Already eaten!</h3>
</div>

<div class="flex burger-list-container justify-content-around">
    <ul class="burger-list ready-to-eat">
        {{#each burger}}
            {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
            {{/unless}}
        {{/each}}
    </ul>

    <ul class="burger-list devoured-burgers">
        {{#each burger}}
            {{#if devoured}} 
                {{> burgers/burger-block devoured=false}}
            {{/if}}
        {{/each}}
    </ul>
</div>

<form class="flex justify-content-center create-burger-form col-md-6 mt-3">
  <div class="form-group">
    <label for="burgersubmit">Add a burger</label>
    <input type="text" name="name" class="form-control" id="addburger">
    <button type="submit" class="btn btn-success create-burger mt-3">Submit order</button>
  </div>
</form>